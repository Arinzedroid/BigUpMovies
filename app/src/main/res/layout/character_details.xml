<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp"
    app:cardBackgroundColor="?attr/cardbackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="120dp"
                    android:layout_height="130dp" />

                <TextView
                    android:id="@+id/actor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/profile_pic"
                    android:padding="3dp"
                    android:text="Name"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="?attr/textcolor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/actor_bday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/actor_name"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/profile_pic"
                    android:padding="3dp"
                    android:text="Birthday"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="?attr/textcolor"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/actor_dday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/actor_bday"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/profile_pic"
                    android:padding="3dp"
                    android:text="Death Day"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="?attr/textcolor"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/actor_place_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/actor_dday"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/profile_pic"
                    android:ems="5"
                    android:maxLines="2"
                    android:padding="3dp"
                    android:text="Place of birth"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="?attr/textcolor"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/actor_popularity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/actor_place_of_birth"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/profile_pic"
                    android:ems="5"
                    android:padding="3dp"
                    android:text="Popularity"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="?attr/textcolor"
                    android:textStyle="normal" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_biography"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="5"
                android:text="Biogra"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="?attr/textcolor"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="5"
                android:text="Also Known As"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="?attr/textcolor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/known_as"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="5"
                android:text=""
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="?attr/textcolor"
                android:textStyle="normal" />

        </LinearLayout>

    </ScrollView>

</android.support.v7.widget.CardView>